<Window x:Class="Game_Main.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Main"
        mc:Ignorable="d"
        Title="Window1" Height="600" Width="600">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="570" VerticalAlignment="Top" Width="592" Background="Black">

            <Image x:Name="intro" Source="Images\introbkg.jpg" Height="275" Canvas.Left="34" Canvas.Top="22" Width="548" Stretch="Fill"/>
            <TextBox x:Name="tbName" Height="25" Canvas.Left="240" TextWrapping="Wrap" Canvas.Top="322" Width="136" />
            <Label x:Name="lblName" Content="ENTER NAME" Background="Black" Foreground="LightBlue" Canvas.Left="240" Canvas.Top="297" Height="25" Width="136" Grid.IsSharedSizeScope="True" IsEnabled="False" RenderTransformOrigin="0.5,0.5" FontFamily="Showcard Gothic"/>
            <Button x:Name="btStart" Content="Start" Background="Black" Foreground="LightBlue" Canvas.Left="208" Canvas.Top="352" Width="191" Click="btStart_Click" Height="86"/>
        </Canvas>

    </Grid>
</Window>
